<section class="cart py-16">
    <%if (session.cart) { %>
        <div class="order container mx-auto xl:w-1/2">
            <div class="flex item-center border-b border-gray-300 pb-4">
                <img src="/img/inventory.png" alt="" width="40px">
                <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>


            </div>

            <div class="order-list">
                <% for(let prep of Object.values(session.cart.items)) { %>
                    <div class="flex items-center my-8">
                        <img width="90px" src="/img/<%= prep.item.image %>" alt="">
                        <div class="flex-1 ml-4">
                            <h1>
                                <%= prep.item.name %>
                            </h1>
                        </div>
                        <span class="flex-1">
                            <%= prep.qty %> Pcs
                        </span>
                        <span class="font-bold text-lg">Rs.<%= prep.item.price * prep.qty %></span>
                    </div>

                    <% } %>

            </div>




            <hr>
            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount:</span>
                    <span class="amount text-2xl font-bold ml-2 ">Rs.<%= session.cart.totalPrice %> </span>
                </div>
                <% if(user) { %>
                <div>
                    <form action="/orders" method="POST" class="mt-12">
                        <input name="phone"  class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone number">
                        <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                        <div>
                            <button class="px-6 py-2 rounded-full text-white font-bold mt-8 btn-primary bottom "
                                value="submit">Order Now</button>
                        </div>
                    </form>
                </div>
                <% } else { %>
                <a href="/login" class="inline-block cursor-pointer px-6 py-2 rounded-full text-white font-bold mt-8 btn-primary">Login to Continue</a>
                <% } %>
                
            </div>

        </div>
        <% } else { %>


        <div class="empty-cart py-16"> 
            <div class="container mx-auto text-center">
                <h1 class="text-3xl font-bold mb-2">Empty cart</h1>
                <p class="text-gray-500 text-lg mb-12">You probably haven't ordered anything yet. <br>
                    To Place your order, go to the main page</p>
                <img class="w-2/5 mx-auto" src="/img/emptycart2.png" alt="empty-cart">
                <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12 my-2">Go
                    back</a>
            </div>
        </div>
        <% } %>


</section>