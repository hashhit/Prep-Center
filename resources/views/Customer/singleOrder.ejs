<section class="status">
    <div class="container mx-auto">
        <div class="status-box w-full lg:w-2/3 mx-auto">
            <div class="flex item-center justify-between mb-12">
                <h1 class="text-xl font-bold">Track order status</h1>
                <h6 class="bg-white py-1 rounded-full px-4 text-green-600 text-xs"><%= order._id %></h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
            </div>
            <ul>
                <li class="status_line text-sm md:text-lg pb-16" data-status="order_placed"><span>Order Placed</span>
                </li>
                <li class="status_line text-sm md:text-lg pb-16" data-status="confirmed" ><span>Order Confirmation </span>
                </li>
                <li class="status_line text-sm md:text-lg pb-16" data-status="labelled"><span>Labelling</span>
                </li>
                <li class="status_line text-sm md:text-lg pb-16" data-status="sticker_removed"><span>Removing Stickers</span>
                </li>
                <li class="status_line text-sm md:text-lg pb-16" data-status="expiration_labelled"><span>Expiration Labelling</span>
                </li>
                <li class="status_line text-sm md:text-lg pb-16" data-status="completed"><span>Complete</span>
                </li>
                <li class="status_line text-sm md:text-lg pb-16" data-status="shipping_to_courier_service"><span>Shipping To Courier Service</span>
                </li>
                <li class="status_line text-sm md:text-lg" data-status="delivered"><span>Delivered</span>
                </li>
                
            </ul>
        </div>
    </div>
</section>