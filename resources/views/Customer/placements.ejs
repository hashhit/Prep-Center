<section class="placements light-section">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg mb-4">All Orders</h1>
        <% if(messages.success){%>
        <div id="success-alert" class="flex item-center bg-green-500 text-white text-sm font-bold px-4 py-3"
            role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="24" height="20" viewBox="0 0 24 24">
                <path
                    d="M 12 2 C 6.4889971 2 2 6.4889971 2 12 C 2 17.511003 6.4889971 22 12 22 C 17.511003 22 22 17.511003 22 12 C 22 6.4889971 17.511003 2 12 2 z M 12 4 C 16.430123 4 20 7.5698774 20 12 C 20 16.430123 16.430123 20 12 20 C 7.5698774 20 4 16.430123 4 12 C 4 7.5698774 7.5698774 4 12 4 z M 11 7 L 11 9 L 13 9 L 13 7 L 11 7 z M 11 11 L 11 17 L 13 17 L 13 11 L 11 11 z">
                </path>
            </svg>
            <p> <%= messages.success%></p>
        </div>
        <% } %>
        <table class="w-full table-auto bg-white">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-left">Orders</th>
                    <th class="px-4 py-2 text-left">Phone</th>
                    <th class="px-4 py-2 text-left">Adress</th>
                    <th class="px-4 py-2 text-left">Time</th>
                </tr>
            </thead>
            <tbody>
                <% if(placements.length) { %>
                <% placements.forEach((placement)=>{ %>
                    <tr>
                        <td class="border px-4 py-2"><a class="link" href="/Customer/placements/<%= placement._id %>"><%= placement._id %></a>
                        </td>
                        <td class="border px-4 py-2"><%= placement.phone %>

                        <td class="border px-4 py-2"><%= placement.address %>
    
                        </td>
                        <td class="border px-4 py-2"><%= moment(placement.createdAt).format('hh:mm A') %>
    
                        </td>
    
                    </tr>
               <% }) %>
                
                
                <% } else { %>
                    <tr>
                        <td class="p-4"><span>No orders found</span></td>

                    </tr>
                <% } %>
            </tbody>
        </table>

    </div>
</section>